<h1 class="text-center mt-4"> Listing All Articles </h1>

<div class="container">
  <% @articles.each do |article| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-body rounded">
          <div class="card-header fst-italic">
            By: <%= article.user.username%>
          </div>
          <div class="card-body">
            <h5 class="card-title" > <%= link_to "#{article.title}", article_path(article), class: "text-success ", id:"Article_title" %></h5>
            <p class="card-text "><%= truncate(article.description, length: 100) %></p>
            <a><%= link_to 'View', article_path(article), method: :get, class: "btn btn-outline-success"%></a>
            <a><%= link_to 'Edit', edit_article_path(article), method: :get, class:"btn btn-outline-primary"%></a>
            <a><%= link_to 'Delete', article_path(article), data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" }, class:"btn btn-outline-danger" %> </a>
          </div>
          <div class="card-footer text-muted">
            <Small> Created <%= time_ago_in_words(article.created_at) %> ago, 
            edited <%= time_ago_in_words(article.updated_at) %> ago</Small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>




<h1 class="text-center mt-4"> <%=@article.title%></h1>

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-body rounded">
                <div class="card-header fst-italic">
                    By: Erion Technologies
                </div>
                <div class="card-body">
                    <p class="card-text "><%= simple_format(@article.description) %></p>
                    <a><%= link_to 'Edit', edit_article_path(@article), method: :get, class:"btn btn-outline-primary"%></a>
                    <a><%= link_to 'Delete', article_path(@article), data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" }, class:"btn btn-outline-danger" %> </a>
                </div>
                <div class="card-footer text-muted">
                    <Small> Created <%= time_ago_in_words(@article.created_at) %> ago, 
                    edited <%= time_ago_in_words(@article.updated_at) %> ago</Small>
                </div>
            </div>
        </div>
    </div>
</div>


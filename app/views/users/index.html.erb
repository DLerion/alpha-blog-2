<h1 class="text-center mt-4"> Alpha Bloggers </h1>

<div class="container">
  <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
        <div class="card text-center shadow mb-5 bg-body rounded">
          <div class="card-header fst-italic">
            <%= link_to user.username, user%>
          </div>
          <div class="card-body">
            <h5 class="card-title" >
                <%= link_to gravatar_for(user, size: 150),user %>
            </h5>
            <p class="card-text "><%=  pluralize(user.articles.count, "article") %></p>
            <a><%= link_to 'View profile', user, method: :get, class: "btn btn-outline-success"%></a>
            <a><%= link_to 'Edit profile', edit_user_path(user), method: :get, class:"btn btn-outline-primary"%></a>
          </div>
          <div class="card-footer text-muted">
            <Small> Joined <%= time_ago_in_words(user.created_at) %> ago</Small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>